<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="1"
        android:backgroundTint="@android:color/holo_blue_bright"
        android:id="@+id/btn1"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="2"
        android:layout_below="@id/btn1"
        android:layout_marginTop="5dp"
        android:backgroundTint="@android:color/holo_purple"
        android:id="@+id/btn2"
        />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="3"
        android:layout_toRightOf="@id/btn1"
        android:backgroundTint="@color/design_default_color_error"
        android:id="@+id/btn3"
        />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="4"
        android:layout_alignBottom="@id/btn2"
        android:backgroundTint="@android:color/holo_green_dark"
        android:id="@+id/btn4"
        />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="5"
        android:layout_alignBottom="@id/btn2"
        android:layout_toRightOf="@id/btn2"
        android:backgroundTint="@android:color/holo_orange_light"
        android:id="@+id/btn5"
        />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="6"
        android:layout_below="@id/btn2"
        android:layout_alignRight="@id/btn2"
        android:backgroundTint="@color/cyan"
        android:id="@+id/btn6"
        layout
        />

    <Button
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:text="7"
        android:layout_below="@id/btn6"
        android:layout_alignStart="@id/btn6"
        android:backgroundTint="@color/cyan"
        android:id="@+id/btn7"

        />
    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="8"
        android:layout_below="@id/btn7"
        android:backgroundTint="@android:color/holo_orange_dark"
        android:id="@+id/btn8"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="9"
        android:layout_toEndOf="@id/btn8"
        android:layout_alignBottom="@id/btn8"
        android:backgroundTint="@color/design_default_color_primary"
        android:id="@+id/btn9"
        />
    <Button
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="10"
        android:layout_toRightOf="@id/btn9"
        android:layout_alignTop="@id/btn8"
        android:backgroundTint="@android:color/holo_purple"
        android:id="@+id/btn10"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="LOREM"
        android:layout_below="@id/btn10"
        android:backgroundTint="@color/cyan"
        android:id="@+id/btnLOREM"
        />

    <Button
        android:id="@+id/btnIPSUM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btnLOREM"
        android:layout_toRightOf="@id/btnLOREM"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="IPSUM" />


</RelativeLayout>